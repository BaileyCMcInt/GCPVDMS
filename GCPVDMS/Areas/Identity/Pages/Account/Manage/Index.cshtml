@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Birthday"></label>
                <input asp-for="Input.Birthday" min="1940-01-01" value="1980-01-01" class="form-control" />
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PreferredContact"></label>
                <select class="form-control" asp-for="Input.PreferredContact">
                    <option value="">Please select an option</option>
                    <option value="Email">Email</option>
                    <option value="Phone">Phone</option>
                    <option value="Text Message">Text Message</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.SecondPreferredContact"></label>
                <select class="form-control" asp-for="Input.SecondPreferredContact">
                    <option value="">Please select an option</option>
                    <option value="Email">Email</option>
                    <option value="Phone">Phone</option>
                    <option value="Text Message">Text Message</option>
                </select>
            </div>
            <br />
            @*<label asp-for="Input.PreferredContact"></label>
                <input asp-for="Input.PreferredContact" class="form-control" />
                <span asp-validation-for="Input.PreferredContact" class="text-danger"></span>*@
        </div>
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ProfilePicture" style="width: 100%;"></label>
                @if (Model.Input.ProfilePicture != null)
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                }
                else
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                }
                <input type="file"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="Input.ProfilePicture"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                
                <br />
                <center>
                    <div class="form-group">
                        <label asp-for="Input.County"></label>
                        <select class="form-control" asp-for="Input.County">
                            <option value="">Please select a County</option>
                            <option value="Duval">Duval</option>
                            <option value="Palm Beach">Palm Beach</option>
                        </select>
                    </div>
                    <label>Account Type</label>
                    <div class="form-group">
                        <label asp-for="Input.isVolunteer"></label>
                        <input asp-for="Input.isVolunteer" class="custom-checkbox" />
                        <span asp-validation-for="Input.isVolunteer" class="text-danger"></span>
                        <label asp-for="Input.isDonor"></label>
                        <input asp-for="Input.isDonor" class="custom-checkbox" />
                        <span asp-validation-for="Input.isDonor" class="text-danger"></span>
                    </div>
                </center>

            </div>
        </div>
    </div>
    <center><button id="update-profile-button" type="submit" class="btn btn-outline-dark">Save</button></center>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
