@model IEnumerable<Event> 

@{
    ViewBag.Title = "All Events";
    Layout = "_Layout";
}

@*Script for JavaScript DataTables*@
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<partial name="_GlobalEventTabs" />
<div class="text-center" style="margin-top: 10px; padding: 13px 0 10px 0;">
    <a asp-action="Create" class="btn btn-outline-dark">Create New Event</a>
    <button class="btn btn-outline-dark">Export Data</button>
    <button class="btn btn-outline-dark">Tasks</button>
</div>


<br />

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Contact</th>
            <th>Date</th>
            <th>Spots available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            string locationname;

            if(item.LocationID == 1)
            {
                locationname = "Mandarin";
            }
            else if(item.LocationID == 2)
            {
                locationname = "MLK Elementary";
            }
            else if (item.LocationID == 3)
            {
                locationname = "Palm Beach";
            }
            else if (item.LocationID == 4)
            {
                locationname = "Offsite Duval";
            }
            else
            {
                locationname = "Offsite Palm Beach";
            }

            <tr>
                <td>@item.EventTitle</td>
                <td>@locationname</td>
                <td>@item.POCName</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@(@item.NumVolunteersNeeded - @item.NumVolunteersSignedUp)</td>
                <td>

                    @*<form asp-action="Delete" method="post">
                        <a asp-action="Index" class="btn btn-sm btn-warning"
                           asp-route-eventId="@item.EventID">
                            Edit
                        </a>
                        <input type="hidden" name="ProductID" value="@item.EventID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>*@
                    <form method="post">
                        @*<button class="btn btn-sm btn-light">
                            View
                        </button>*@
                        <input type="hidden" name="EventID" value="" />
                        <a asp-action="DisplayEvent" class="btn btn-outline-dark btn-sm"
                           asp-route-eventId="@item.EventID">
                            View
                        </a>
                        <input type="hidden" name="EventID" value=" " />
                        <a asp-action="EventForm" class="btn btn-outline-dark btn-sm"
                           asp-route-eventId="@item.EventID">
                            Edit
                        </a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

