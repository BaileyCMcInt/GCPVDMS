@model RoleEdit
@{
    Layout = "_Layout";

}

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#roleTable2').DataTable();
            $('#roleTable3').DataTable();
        });</script>
}
<partial name="_GlobalRoleTabs" />

<h1 class="bg-light">Update Role</h1>
<a asp-action="RoleIndex" class="btn btn-secondary">Back to Roles</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />



    <h2 class="bg-light">Add To @Model.Role.Name</h2>
    <table id="roleTable2" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Add</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">All Users Are Members</td></tr>
            }
            else
            {
                @foreach (ApplicationUser user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="AddIds" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <center><button type="submit" class="btn btn-primary">Add user(s) to role</button></center>
    </br></br>

    <h2 class="bg-light">Remove From @Model.Role.Name</h2>
    <table id="roleTable3" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">No Users Are Members</td></tr>
            }
            else
            {
                @foreach (ApplicationUser user in Model.Members)
                {
                    <tr>

                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="DeleteIds" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <center><button type="submit" class="btn btn-primary">Remove user(s) from role</button></center>
</form>