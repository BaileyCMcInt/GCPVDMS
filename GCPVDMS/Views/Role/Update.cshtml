@model RoleEdit
@{
    Layout = "_Layout";

}

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#roleTable2').DataTable();
            $('#roleTable3').DataTable();
        });</script>
}

<h1 class="bg-info text-white">Update Role</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

 

    <h2 class="bg-info p-1 text-white">Add To @Model.Role.Name</h2>
    <table id="roleTable2" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Add</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">All Users Are Members</td></tr>
            }
            else
            {
                @foreach (ApplicationUser user in Model.NonMembers)
                {
        <tr>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.UserName</td>
            <td>
                <input type="checkbox" name="AddIds" value="@user.Id">
            </td>
        </tr>
                }
            }
        </tbody>
    </table>
    </br></br>

    <h2 class="bg-info p-1 text-white">Remove From @Model.Role.Name</h2>
    <table id="roleTable3" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">No Users Are Members</td></tr>
            }
            else
            {
                @foreach (ApplicationUser user in Model.Members)
                {
        <tr>

            <td>@user.LastName, @user.FirstName</td>
            <td>@user.UserName</td>
            <td>
                <input type="checkbox" name="DeleteIds" value="@user.Id">
            </td>
        </tr>
                }
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>