<body>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index">Volunteer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Donor</a>
        </li>
    </ul>
    <br />
    <br />
    <div>
        <h3>Events I Signed Up For</h3>
        <table id="yourTable2" class="table table-bordered table-striped">
            <thead style="width: 50px">
                <tr>

                    <th class="text-center">Date</th>
                    <th class="text-center">Event Location</th>
                    <th class="text-center">Start Time</th>
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>02/17/2021</td>
                    <td>MLK</td>
                    <td>11:00am</td>
                </tr>
                <tr>

                    <td>02/22/2021</td>
                    <td>MLK</td>
                    <td>2:00pm</td>
                </tr>
                <tr>

                    <td>02/28/2021</td>
                    <td>MLK</td>
                    <td>4:00pm</td>
                </tr>

            </tbody>
        </table>
    </div>
    <div style="text-align: center">
        <a asp-action="MyLoggedHours" class="btn btn-outline-dark">View My Logged Hours</a>
    </div>
</body>
</html>
