@model VolunteerHour
<html>
<head>

</head>
<body>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" asp-action="Index">Volunteer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Donor</a>
        </li>
    </ul>
    <br />
    <div >
        <h3>Log Hours Request Form</h3>
        <br />
        <form asp-action="LogMyHours" method="post">
            <input type="hidden" asp-for="UserHoursID" />
            <div class="form-group">
                <label asp-for="Event">Event</label>
                <input asp-for="Event" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input asp-for="Date" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <label asp-for="NumberOfHours">Number of Hours</label>
                <input asp-for="NumberOfHours" min="1" max="24" class="form-control">
            </div>
            <br />
            <div>
                <button asp-action="Index" class="btn btn-primary" type="submit">Submit Form</button> <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
            </div>
        </form>
    </div>

</body>
</html>